# set vars
if [ -f "$HOME/.profile_env" ]; then
    . "$HOME/.profile_env"
fi

fc-cache -fv $HOME/.fonts
mkfontdir $HOME/.fonts
(cd $HOME && xrdb -merge $HOME/.Xresources)
xset +fp $HOME/.fonts
xhost inet:hapci
setxkbmap -option "grp:shift_toggle,grp_led:scroll" us,hu basic,querty

case `hostname` in
    foltpad*)
        synclient MaxTapTime=0
        ;;
esac

